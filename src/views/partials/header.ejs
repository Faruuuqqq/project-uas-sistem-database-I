<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logoutButton = document.getElementById('logout-button');
    if (logoutButton) {
      logoutButton.addEventListener('click', async () => {
        try {
          const response = await fetch('/auth/logout', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
          });
          const data = await response.json();
          if (response.ok) {
            window.showAlert(data.message, 'success');
            setTimeout(() => {
              window.location.href = '/auth/login'; // Redirect ke halaman login setelah logout
            }, 1500);
          } else {
            window.showAlert(data.message || 'Gagal logout.', 'error');
          }
        } catch (error) {
          console.error('Logout error:', error);
          window.showAlert('Terjadi kesalahan jaringan saat logout.', 'error');
        }
      });
    }

    // Fungsi untuk memperbarui jumlah item di badge keranjang
    window.updateCartItemCount = async () => {
        const cartItemCountSpan = document.getElementById('cart-item-count');
        if (!cartItemCountSpan) return;
        try {
            const response = await fetch('/api/carts'); // Mengambil data keranjang
            if (!response.ok) {
                // If not logged in, or error, set count to 0
                cartItemCountSpan.textContent = '0';
                return;
            }
            const result = await response.json();
            const totalItems = result.data.items ? result.data.items.reduce((sum, item) => sum + item.quantity, 0) : 0;
            cartItemCountSpan.textContent = totalItems;
        } catch (error) {
            console.error('Error updating cart item count:', error);
            cartItemCountSpan.textContent = '0'; // Set ke 0 jika ada error
        }
    };

    // Panggil saat header dimuat
    window.updateCartItemCount();
  });
</script>
